{
    "compilerOptions": {
      "target": "ES2022",                       // Set ECMAScript 2022 as the output language. [Reference](https://www.typescriptlang.org/tsconfig/#target)
      "lib": ["ES2022"],                        // Include ECMAScript 2022 standard library. [Reference](https://www.typescriptlang.org/tsconfig/#lib)
      "module": "es2022",                       // Use ECMAScript 2022 modules. [Reference](https://www.typescriptlang.org/tsconfig/#module)
      "moduleResolution": "bundler",            // Module resolution strategy for bundlers. [Reference](https://www.typescriptlang.org/tsconfig/#moduleResolution)
      "rootDir": "src",                         // Root directory of TypeScript source files. [Reference](https://www.typescriptlang.org/tsconfig/#rootDir)
      "outDir": "dist",                         // Output directory for compiled JavaScript. [Reference](https://www.typescriptlang.org/tsconfig/#outDir)
      "baseUrl": "src",                         // Base directory for non-relative module imports. [Reference](https://www.typescriptlang.org/tsconfig/#baseUrl)
      "strict": true,                           // Enable all strict type-checking options. [Reference](https://www.typescriptlang.org/tsconfig/#strict)
      "esModuleInterop": true,                  // Enable interoperability between CommonJS and ESM. [Reference](https://www.typescriptlang.org/tsconfig/#esModuleInterop)
      "forceConsistentCasingInFileNames": true, // Ensure consistent file name casing. [Reference](https://www.typescriptlang.org/tsconfig/#forceConsistentCasingInFileNames)
      "skipLibCheck": true,                     // Skip type checking of declaration files to speed up compilation. [Reference](https://www.typescriptlang.org/tsconfig/#skipLibCheck)
      "sourceMap": true,                        // Generate source maps for debugging. [Reference](https://www.typescriptlang.org/tsconfig/#sourceMap)
      "resolveJsonModule": true,                // Allow importing JSON files as modules. [Reference](https://www.typescriptlang.org/tsconfig/#resolveJsonModule)
      "incremental": true,                      // Enable incremental compilation to speed up builds. [Reference](https://www.typescriptlang.org/tsconfig/#incremental)
      "composite": true                         // Allow the project to be referenced by other projects. [Reference](https://www.typescriptlang.org/tsconfig/#composite)
    },
    "include": ["src/**/*"],                    // Include all files in the src directory.
    "exclude": ["node_modules", "dist"]         // Exclude node_modules and dist from compilation.
  }
  